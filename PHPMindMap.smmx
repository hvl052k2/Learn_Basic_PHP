<topic id="48" parent="46" guid="oNvL24nYpkSaA8DwjgCnLw" x="517.69" y="1508.32" text="Upload file lên thư mục">
<note>
// Code trong file index.php&lt;form action=&quot;xuly.php&quot; method=&quot;post&quot; enctype=&quot;multipart/form-data&quot;&gt;  &lt;input type=&quot;file&quot; name=&quot;hinhanh&quot; value=&quot;Chọn tệp&quot;&gt;  &lt;input type=&quot;submit&quot; name=&quot;btn&quot; value=&quot;Gửi&quot;&gt;&lt;/form&gt;// Code trong file xuly.php&lt;?phpif (isset($_POST[&quot;btn&quot;])) {  if (isset($_FILES[&quot;hinhanh&quot;])) {    if ($_FILES[&quot;hinhanh&quot;][&quot;size&quot;] == 0) {      echo &quot;Bạn chưa chọn file&quot;;    }else {      // chuyển file vào thư mục      move_uploaded_file($_FILES[&quot;hinhanh&quot;][&quot;tmp_name&quot;], &quot;files/&quot; . $_FILES[&quot;hinhanh&quot;][&quot;name&quot;]);      echo &quot;Up file thành công&quot;;    }  } else {    echo &quot;Upload file bị lỗi&quot;;  }}?&gt;
</note>
</topic>
<topic id="49" parent="46" guid="TK9SlurofUuMUMp2GvlJbw" x="506.69" y="1552.88" text="Giới hạn upload file">
<note>
// Code trong file index.php&lt;form action=&quot;xuly.php&quot; method=&quot;post&quot; enctype=&quot;multipart/form-data&quot;&gt;  &lt;input type=&quot;file&quot; name=&quot;hinhanh&quot; value=&quot;Chọn tệp&quot;&gt;  &lt;input type=&quot;submit&quot; name=&quot;btn&quot; value=&quot;Gửi&quot;&gt;&lt;/form&gt;// Code trong file xuly.php&lt;?phpif (isset($_POST[&quot;btn&quot;])) {  if (isset($_FILES[&quot;hinhanh&quot;])) {    if ($_FILES[&quot;hinhanh&quot;][&quot;size&quot;] == 0) {      echo &quot;Bạn chưa chọn file&quot;;    } else if ($_FILES[&quot;hinhanh&quot;][&quot;size&quot;] &gt; 2000000) {      // 2000000 tương đương với 2Mb      echo &quot;File quá dung lượng&quot;;    } else {      // chuyển file vào thư mục      move_uploaded_file($_FILES[&quot;hinhanh&quot;][&quot;tmp_name&quot;], &quot;files/&quot; . $_FILES[&quot;hinhanh&quot;][&quot;name&quot;]);      echo &quot;Up file thành công&quot;;    }  } else {    echo &quot;Upload file bị lỗi&quot;;  }}?&gt;
</note>
</topic>
