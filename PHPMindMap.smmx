// Code trong file ex02.php&lt;?phprequire_once &quot;classes/caculator.php&quot;;// use Demo\Caculator;$calc = new Caculator();//I. Kiểm tra thuộc tính tồn tại// Cách 1: Kiểm tra bằng hàm isset() hoặc empty()if (isset($calc-&gt;numberC)) {    echo $calc-&gt;numberC;} else {    echo &apos;Thuộc tính numberC không tồn tại&apos;;}echo &apos;&lt;hr&gt;&apos;;// Cách 2: Kiểm tra bằng hàm property_exists()if (property_exists($calc, &apos;numberC&apos;)) {    echo $calc-&gt;numberC;} else {    echo &apos;Thuộc tính numberC không tồn tại&apos;;}echo &apos;&lt;hr&gt;&apos;;//II. Kiểm tra phương thức tồn tại// Cách 1: Kiểm tra bằng hàm method_exists()if (method_exists($calc, &apos;showMsg&apos;)) {    echo $calc-&gt;showMsg();} else {    echo &apos;Phương thức add() không tồn tại&apos;;}echo &apos;&lt;hr&gt;&apos;;$className = Caculator::class;echo &apos;Tên class là: &apos; . $className . &apos;&lt;br&gt;&apos;;?&gt;
</note>
</topic>
