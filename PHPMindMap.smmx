y&apos;];        $sql = &quot;INSERT INTO products (name, image, price, warranty) VALUES (&apos;$name&apos;, &apos;$image&apos;, &apos;$price&apos;, &apos;$warranty&apos;)&quot;;        $result = mysqli_query($conn, $sql);        if ($result) {            move_uploaded_file($_FILES[&apos;image&apos;][&apos;tmp_name&apos;], &quot;images/products/$image&quot;);            echo &quot;Thêm sản phẩm thành công&quot;;        } else {            echo &quot;Thêm sản phẩm thất bại&quot;;        }    }?&gt;&lt;form action=&quot;add_product.php&quot; method=&quot;post&quot; enctype=&quot;multipart/form-data&quot;&gt;    Tên sản phẩm: &lt;input type=&quot;text&quot; name=&quot;name&quot;&gt;&lt;br&gt;&lt;br&gt;    Hình ảnh: &lt;input type=&quot;file&quot; name=&quot;image&quot;&gt;&lt;br&gt;&lt;br&gt;    Giá: &lt;input type=&quot;text&quot; name=&quot;price&quot;&gt;&lt;br&gt;&lt;br&gt;    Bảo hành: &lt;input type=&quot;text&quot; name=&quot;warranty&quot;&gt;&lt;br&gt;&lt;br&gt;    &lt;input type=&quot;submit&quot; name=&quot;btn&quot; value=&quot;Thêm sản phẩm&quot;&gt;&lt;/form&gt;
