<topic id="121" parent="114" guid="2fHnb_k-8E-nBX5EeYhYEA" x="2434.10" y="1374.64" text="class Caculator">
<note>
&lt;?php    class Caculator{        var $numberA, $numberB;        const MSG_CONTENT = &apos;Kết quả là: {value}&apos;;        public function setNumberA ($value){            $this-&gt;numberA = $value;        }        public function setNumberB ($value){            $this-&gt;numberB = $value;        }        public function add( $valueA, $valueB ){            return $valueA + $valueB;        }        public function minus( $valueA, $valueB ){            return $valueA + $valueB;        }        public function multiply($valueA, $valueB){            return $valueA * $valueB;         }        public function divide($valueA, $valueB){            if($valueB &gt; 0){                return $valueA / $valueB;            }            return &apos;Không thể chia cho số 0&apos;;        }        public function showResult($msg, $value){            echo str_replace(&apos;{value}&apos;, $value, $msg);        }        public function showShortResult($value){            $msg = $this::MSG_CONTENT;            $this-&gt;showResult($msg, $value);        }        public function demoThis(){            return $this;        }    }    // Khởi tạo đối tượng    $calc = new Caculator();    // Lấy giá trị thuộc tính    echo $calc-&gt;numberA;    echo &quot;&lt;br&gt;&quot;;    echo $calc-&gt;numberB;    echo &quot;&lt;hr&gt;&quot;;    // Gán giá trị mới cho thuộc tính    $calc-&gt;numberA = 10;    $calc-&gt;numberB = 20;    echo $calc-&gt;numberA;    echo &quot;&lt;br&gt;&quot;;    echo $calc-&gt;numberB;    echo &quot;&lt;hr&gt;&quot;;    echo $calc-&gt;add($calc-&gt;numberA, $calc-&gt;numberB);    echo &quot;&lt;hr&gt;&quot;;    echo $calc::MSG_CONTENT;    echo &quot;&lt;hr&gt;&quot;;    echo &quot;&lt;h3&gt;Thông báo kết quả: &lt;/h3&gt;&quot;;    $total = $calc-&gt;add($calc-&gt;numberA, $calc-&gt;numberB);    $calc-&gt;showShortResult($total);    echo &quot;&lt;br&gt;&quot;;    echo &quot;&lt;hr&gt;&quot;;?&gt;
</note>
</topic>
