<topic id="35" parent="30" guid="LqJmTjVI40OHWDZVIyHceA" x="252.84" y="1285.52" text="Điều kiện form">
<note>
&lt;!DOCTYPE html&gt;&lt;html lang=&quot;en&quot;&gt;&lt;head&gt;    &lt;title&gt;Document&lt;/title&gt;    &lt;style&gt;        .error {            color: red;        }    &lt;/style&gt;&lt;/head&gt;&lt;body&gt;    &lt;?php    $nameError = &quot;&quot;;    $name = &quot;&quot;;    if ($_SERVER[&quot;REQUEST_METHOD&quot;] == &quot;POST&quot;) {      if (empty($_POST[&apos;name&apos;])) {        $nameError = &quot;Không được để trống&quot;;      } else {        $name = $_POST[&apos;name&apos;];        if (!preg_match(&quot;/^[a-zA-Z-&apos; ]*$/&quot;, $name)) {          $nameError = &quot;Không được nhập kí tự đặc biệt&quot;;        } else {          echo $name;        }      }    }    ?&gt;    &lt;form action=&quot;index.php&quot; method=&quot;post&quot;&gt;        Tên: &lt;input type=&quot;text&quot; name=&quot;name&quot;&gt;&lt;br&gt;        &lt;span class=&quot;error&quot;&gt;&lt;?php echo $nameError; ?&gt;&lt;/span&gt;        &lt;br&gt;        &lt;input type=&quot;submit&quot; name=&quot;submit&quot; value=&quot;Gửi&quot;&gt;    &lt;/form&gt;&lt;/body&gt;&lt;/html&gt;
</note>
</topic>
