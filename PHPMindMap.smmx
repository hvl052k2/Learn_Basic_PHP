// Code trong file index.php&lt;form action=&quot;xuly.php&quot; method=&quot;post&quot; enctype=&quot;multipart/form-data&quot;&gt;  &lt;input type=&quot;file&quot; name=&quot;hinhanh&quot; value=&quot;Chọn tệp&quot;&gt;  &lt;input type=&quot;submit&quot; name=&quot;btn&quot; value=&quot;Gửi&quot;&gt;&lt;/form&gt;&lt;?php$thumuc = &quot;files/&quot;; //Tên thư mục chứa file upload$bien = $thumuc.basename($_FILES[&quot;hinhanh&quot;][&quot;name&quot;]);//Lấy tên gốc của file uploadif (isset($_POST[&quot;btn&quot;])) {  if (isset($_FILES[&quot;hinhanh&quot;])) {    if ($_FILES[&quot;hinhanh&quot;][&quot;size&quot;] == 0) {      echo &quot;Bạn chưa chọn file&quot;;    } else if(file_exists(($bien))){      echo &quot;File đã tồn tại&quot;;    } else if ($_FILES[&quot;hinhanh&quot;][&quot;size&quot;] &gt; 20) {      echo &quot;File quá dung lượng&quot;;    } else {      // chuyển file vào thư mục      move_uploaded_file($_FILES[&quot;hinhanh&quot;][&quot;tmp_name&quot;], &quot;files/&quot; . $_FILES[&quot;hinhanh&quot;][&quot;name&quot;]);      echo &quot;Up file thành công&quot;;    }  } else {    echo &quot;Upload file bị lỗi&quot;;  }}?&gt;
